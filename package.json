{
  "name": "globetrotte",
  "productName": "GlobeTrotte",
  "version": "1.0.0",
  "author": "BinHong Lee <binhong@binhong.me>",
  "private": true,
  "license": "AGPL 3.0",
  "scripts": {
    "genRouter": "tsc src/cockpit/scripts/genRouter.ts --outDir ./plz-out && node ./plz-out/genRouter.js",
    "genComponent": "tsc src/cockpit/scripts/genComponent.ts --outDir ./plz-out && node ./plz-out/genComponent.js",
    "serve": "cross-env NODE_ENV=development vue-cli-service serve --open --host localhost",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "format": "pnpm run lint -- --fix",
    "format:plz": "pnpm run format",
    "test:unit": "vue-cli-service test:unit src/cockpit/tests/**/*.spec.ts",
    "test:unit:plz": "pnpm run test:unit",
    "test:e2e": "cypress run",
    "test:e2e:plz": "pnpm run startServer && xvfb-run -a pnpm run test:e2e && pnpm run endServer",
    "startServer": "forever start ./node_modules/@vue/cli-service/bin/vue-cli-service.js test:e2e && wait-on http://localhost:8080",
    "endServer": "forever stop ./node_modules/@vue/cli-service/bin/vue-cli-service.js",
    "cover": "nyc pnpm run test:unit",
    "cover:plz": "pnpm run cover"
  },
  "dependencies": {
    "element-ui": "2.13.2",
    "tslib": "1.13.0",
    "vue": "2.6.11",
    "vue-class-component": "7.2.5",
    "vue-property-decorator": "8.5.1",
    "vue-router": "3.4.3",
    "wings-ts-util": "0.0.6"
  },
  "devDependencies": {
    "@types/assert": "1.5.1",
    "@types/mocha": "8.0.2",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "@vue/cli-plugin-e2e-cypress": "4.5.3",
    "@vue/cli-plugin-eslint": "4.5.3",
    "@vue/cli-plugin-router": "4.5.3",
    "@vue/cli-plugin-typescript": "4.5.3",
    "@vue/cli-plugin-unit-mocha": "4.5.3",
    "@vue/cli-service": "4.5.3",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "5.0.2",
    "@vue/test-utils": "1.0.3",
    "chai": "4.2.0",
    "cross-env": "7.0.2",
    "eslint": "7.7.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-vue": "6.2.2",
    "forever": "3.0.0",
    "node-sass": "4.14.1",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "pug": "3.0.0",
    "pug-plain-loader": "1.0.0",
    "sass-loader": "8.0.2",
    "typescript": "3.9.7",
    "vue-template-compiler": "2.6.11",
    "wait-on": "5.2.0"
  },
  "nyc": {
    "instrument": false,
    "sourceMaps": false,
    "all": true,
    "check-coverage": false,
    "per-file": true,
    "clean": true,
    "skip-full": true,
    "include": [
      "src/**/*.{ts,vue}"
    ],
    "temp-dir": "./.nyc_output",
    "exclude": [
      "**/*.spec.ts",
      "**/*.js",
      "scripts/"
    ],
    "reporter": [
      "lcov",
      "cobertura",
      "text",
      "text-summary"
    ],
    "report-dir": "./coverage",
    "extension": [
      ".ts",
      ".vue"
    ]
  }
}
