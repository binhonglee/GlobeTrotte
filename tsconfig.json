{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/cockpit/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cypress", "vite/client", "@types/jest", "vitest"],
  },
  "include": [
    "src/cockpit/**/*.ts",
    "src/cockpit/**/*.d.ts",
    "src/cockpit/**/*.vue",
    "vite.config.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "src/cockpit/tests/cypress/**/*",
    "src/cockpit/tests/puppeteer/**/*",
    "plz-out/"
  ],
}
