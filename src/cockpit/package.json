{
  "name": "@globetrotte/cockpit",
  "version": "0.0.1",
  "private": "true",
  "author": "BinHong Lee <binhong@binhong.me>",
  "scripts": {
    "build": "pnpm run preflight && pnpm run build:plz",
    "build:plz": "vite build",
    "check:vue_tsc": "vue-tsc --noEmit --skipLibCheck",
    "checkBackend": "esbuild --bundle scripts/checkBackend.ts --platform=node --outdir=./plz-out && node ./plz-out/checkBackend.js",
    "format": "pnpm run lint --fix",
    "lint": "eslint \"**/*.{vue,ts}\"",
    "preflight": "pnpm run --filter ../glareshield/all build",
    "serve": "pnpm run preflight && pnpm run serve:plz",
    "serve:plz": "pnpm run checkBackend && vite",
    "test:vitest": "pnpm run preflight && vitest",
    "test:playwright": "vitest -c configs/vitest_playwright.config.ts",
    "test:circleci": "vitest -c configs/vitest_circleci.config.ts",
    "xvfb:run": "if [[ \"$OSTYPE\" == \"darwin\"* ]]; then xvfb=\"\"; elif [[ \"$OSTYPE\" == \"linux-gnu\"* ]]; then xvfb=\"xvfb-run -a \"; fi"
  },
  "dependencies": {
    "@vueuse/head": "1.1.26",
    "axios": "1.4.0",
    "naive-ui": "2.27.0",
    "vue": "3.2.47",
    "wings-ts-util": "0.0.9"
  },
  "devDependencies": {
    "@glareshield/all": "workspace:../glareshield/all",
    "@types/node": "18.16.5",
    "@vicons/ionicons5": "0.12.0",
    "@vitejs/plugin-vue": "4.2.1",
    "@vitest/coverage-c8": "0.31.0",
    "@volar/vue-language-plugin-pug": "^1.1.4",
    "@vue/eslint-config-prettier": "7.1.0",
    "@vue/eslint-config-typescript": "11.0.3",
    "@vue/test-utils": "2.3.2",
    "c8": "7.12.0",
    "esbuild": "0.17.18",
    "eslint": "8.40.0",
    "eslint-plugin-vue": "9.11.0",
    "jest-serializer-html": "7.1.0",
    "jsdom": "20.0.3",
    "playwright-core": "1.29.2",
    "prettier": "2.8.8",
    "typescript": "4.9.5",
    "vite": "4.2.1",
    "vite-plugin-pwa": "0.14.7",
    "vitest": "0.31.0",
    "vue-router": "4.1.6",
    "vue-tsc": "1.6.4",
    "workbox-window": "6.5.4"
  },
  "license": "AGPL 3.0"
}
