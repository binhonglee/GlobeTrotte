{
  "name": "@globetrotte/cockpit",
  "version": "0.0.1",
  "private": "true",
  "author": "BinHong Lee <binhong@binhong.me>",
  "scripts": {
    "build": "pnpm run preflight && pnpm run build:plz",
    "build:plz": "vite build",
    "check:vue_tsc": "vue-tsc --noEmit --skipLibCheck",
    "checkBackend": "esbuild --bundle scripts/checkBackend.ts --platform=node --outdir=./plz-out && node ./plz-out/checkBackend.js",
    "format": "pnpm run lint --fix",
    "lint": "eslint \"**/*.{vue,ts}\"",
    "preflight": "pnpm run --filter ../glareshield/all build",
    "serve": "pnpm run preflight && pnpm run serve:plz",
    "serve:plz": "pnpm run checkBackend && vite",
    "startServer": "forever start node_modules/vite/bin/vite.js",
    "test:cypress": "pnpm run preflight && pnpm run test:cypress:run",
    "test:cypress:ct": "cypress run-ct --config-file cypress-ct.json",
    "test:cypress:plz": "pnpm run xvfb:run && $xvfb pnpm run test:cypress:run",
    "test:cypress:run": "pnpm run checkBackend && NODE_ENV=test cypress install && cypress run",
    "test:vitest": "pnpm run preflight && vitest",
    "test:playwright": "vitest -c configs/vitest_playwright.config.ts",
    "test:circleci": "vitest -c configs/vitest_circleci.config.ts",
    "xvfb:run": "if [[ \"$OSTYPE\" == \"darwin\"* ]]; then xvfb=\"\"; elif [[ \"$OSTYPE\" == \"linux-gnu\"* ]]; then xvfb=\"xvfb-run -a \"; fi"
  },
  "dependencies": {
    "@vueuse/head": "0.7.6",
    "axios": "0.27.2",
    "naive-ui": "2.27.0",
    "vue": "3.2.37",
    "wings-ts-util": "0.0.8"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.12",
    "@cypress/vite-dev-server": "2.2.3",
    "@cypress/vue": "3.1.2",
    "@glareshield/all": "workspace:../glareshield/all",
    "@types/node": "16.11.37",
    "@vicons/ionicons5": "0.12.0",
    "@vitejs/plugin-vue": "2.3.2",
    "@vue/eslint-config-prettier": "7.0.0",
    "@vue/eslint-config-typescript": "10.0.0",
    "@vue/test-utils": "2.0.0",
    "c8": "7.11.3",
    "cypress": "9.7.0",
    "esbuild": "0.14.42",
    "eslint": "8.17.0",
    "eslint-plugin-vue": "8.7.1",
    "jest-serializer-html": "7.1.0",
    "jsdom": "19.0.0",
    "playwright-core": "1.22.2",
    "prettier": "2.6.2",
    "typescript": "4.7.3",
    "vite": "2.9.12",
    "vite-plugin-pwa": "0.12.0",
    "vitest": "0.14.1",
    "vue-router": "4.0.16",
    "vue-tsc": "0.37.5",
    "workbox-window": "6.5.3"
  },
  "license": "AGPL 3.0"
}
